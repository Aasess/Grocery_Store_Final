@model Item

@{
    ViewData["Title"] = "Item Detail";
}

<h1>@Model.Name</h1>

<div class="card mb-4">
    <img src="@Model.Image" class="card-img-top img-fluid" alt="@Model.Name" style="width: 200px; height: 200px; object-fit: cover;" onerror="this.onerror=null;this.src='nofoundIcon.png';">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Price.ToString("C")</p>
        <p class="card-text"><small class="text-muted">@Model.Category.Name</small></p>
        <p class="card-text">@Model.Description</p>
        <a href="#" class="btn btn-primary">
            <i class="fas fa-cart-plus"></i> Add to Cart
        </a>
    </div>
</div>
